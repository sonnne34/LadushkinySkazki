<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/round_menu"
    android:gravity="center"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_icon_menu_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_logo_trans"
        android:contentDescription="@string/description_icon_logo"
        android:gravity="center" />

    <TextView
        android:id="@+id/txt_author_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon_menu_dialog"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/font_lobster"
        android:gravity="end"
        android:text="@string/txt_author_sk"
        android:textColor="@color/yellowLight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_res_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_author_menu_dialog"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/font_lobster"
        android:gravity="center"
        android:text="@string/txt_res"
        android:textColor="@color/yellowLight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_one_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_res_menu_dialog"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/font_lobster"
        android:gravity="end"
        android:text="@string/txt_feedback"
        android:textColor="@color/yellowLight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_two_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_one_menu_dialog"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/font_lobster"
        android:gravity="end"
        android:text="@string/txt_feedback_two"
        android:textColor="@color/yellowLight"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_email_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_two_menu_dialog"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_email_menu_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/font_lobster"
            android:gravity="end"
            android:text="@string/txt_e_mail"
            android:textColor="@color/yellowLight"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_email_address_menu_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/font_lobster"
            android:gravity="end"
            android:text="@string/txt_address_email"
            android:textColor="@color/yellowLight"
            android:textIsSelectable="true"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_email_menu_dialog"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_header_menu_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/font_lobster"
            android:gravity="center"
            android:text="@string/txt_feedback_here"
            android:textColor="@color/yellowLight"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_name_menu_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:autofillHints=""
            android:background="@color/white"
            android:fontFamily="@font/font_first_time_writing"
            android:gravity="center"
            android:hint="@string/txt_your_name"
            android:inputType="textMultiLine"
            android:maxHeight="50dp"
            android:padding="2dp"
            android:textColor="@color/blackTrans"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_feedback_menu_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:autofillHints=""
            android:background="@color/white"
            android:fontFamily="@font/font_first_time_writing"
            android:gravity="center"
            android:hint="@string/txt_your_feedback"
            android:inputType="textMultiLine"
            android:maxHeight="200dp"
            android:padding="2dp"
            android:textColor="@color/blackTrans"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_contact_menu_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:autofillHints=""
            android:background="@color/white"
            android:fontFamily="@font/font_first_time_writing"
            android:gravity="center"
            android:hint="@string/txt_contact"
            android:inputType="textEmailAddress"
            android:maxHeight="100dp"
            android:padding="2dp"
            android:textColor="@color/blackTrans"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/img_btn_send_menu_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/font_lobster"
            android:padding="10dp"
            android:text="@string/send"
            android:textColor="@color/yellowLight" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_close_menu_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_send_menu_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/font_lobster"
        android:padding="10dp"
        android:text="@string/close"
        android:textColor="@color/yellowLight" />

</RelativeLayout>