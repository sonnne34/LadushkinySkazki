<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTrans"
    android:fadeScrollbars="false"
    android:scrollbarStyle="insideInset"
    android:scrollbarThumbVertical="@drawable/scrollview_thumb"
    android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blackTrans">

        <ImageView
            android:id="@+id/img_body_skazka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_name_body_skazka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_negaraserif_hairlineitalic"
            android:textStyle="bold"
            android:textSize="22sp"
            android:padding="7dp"
            android:gravity="center"
            android:textColor="@color/yellowLight"
            android:text="@string/name_skazka"/>

        <TextView
            android:id="@+id/txt_body_skazka"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.5"
            android:fontFamily="@font/font_negaraserif_hairlineitalic"
            android:textSize="14sp"
            android:textColor="@color/yellowLight2"
            android:padding="10dp"
            android:text="@string/body_skazka"/>

    </LinearLayout>

</ScrollView>