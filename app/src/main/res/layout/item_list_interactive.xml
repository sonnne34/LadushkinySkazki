<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackTrans"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/img_interactive_item"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_interactive_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_first_time_writing"
        android:padding="7dp"
        android:text="Имя художника"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_year_interactive_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_interactive_item" />

    <TextView
        android:id="@+id/txt_year_interactive_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_first_time_writing"
        android:padding="7dp"
        android:text="0 лет"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_interactive_item" />

    <TextView
        android:id="@+id/txt_comment_interactive_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_first_time_writing"
        android:padding="7dp"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_interactive_item" />

</androidx.constraintlayout.widget.ConstraintLayout>