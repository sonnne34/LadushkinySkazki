<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTrans">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_header_interactive_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_first_time_writing"
            android:gravity="center"
            android:padding="16dp"
            android:text="Ты любишь рисовать?\nОтправь нам рисунок, и мы добавим его в галерею!"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_comment_add"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_interactive_add" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_edt_name_interactive_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_comment_add">

            <EditText
                android:id="@+id/edt_name_interactive_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/font_first_time_writing"
                android:gravity="center"
                android:hint="имя"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/blackTrans"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_edt_year_interactive_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_edt_name_interactive_add">

            <EditText
                android:id="@+id/edt_year_interactive_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/font_first_time_writing"
                android:gravity="center"
                android:hint="возраст"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@color/blackTrans"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/edt_comment_interactive_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/font_first_time_writing"
            android:gravity="center"
            android:hint="@string/comment_interactive"
            android:imeOptions="actionDone"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:textColor="@color/blackTrans"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_edt_year_interactive_add" />

        <Button
            android:id="@+id/btn_send_interactive_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/blackTrans"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_comment_interactive_add"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>