<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LadushkinnySkazki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/blackLightTrans</item>
        <item name="colorOnPrimary">@color/yellowLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blackTrans</item>
        <item name="colorSecondaryVariant">@color/blackLightTrans</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/backgr_activity_main</item>

    </style>
    <style name="ThemeOverlay.LadushkinnySkazki.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>

